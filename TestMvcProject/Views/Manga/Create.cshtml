@*@model TestMvcProject.ViewModels.MangaViewModel*@

@model Manga
@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Create manga</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <fieldset>
        <div class="col-sm-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tittle" class="form-label mt-4">Input tittle</label>
                <input asp-for="Tittle" placeholder="Input tittle" class="form-control" id="Tittle">
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChaptersCount" class="form-label mt-4">Input manga chapters count</label>
                <input asp-for="ChaptersCount" min="0" placeholder="Input chapters count" class="form-control" id="ChaptersCount">
                <span asp-validation-for="ChaptersCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChaptersRealesed" class="form-label mt-4">Input manga chapters realesed</label>
                <input asp-for="ChaptersRealesed" min="0" placeholder="Input chapters realesed" class="form-control" id="ChaptersRealesed">
                <span asp-validation-for="ChaptersRealesed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4">Input description</label>
                <textarea asp-for="Description" placeholder="Input description" class="form-control" id="Description" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Avatar" class="form-label mt-4">Default file input example</label>
                <input asp-for="Avatar" class="form-control" type="file" id="formFile">
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AnimeId" class="form-label mt-4">Select anime adaptation</label>
                <select class="form-select" asp-for="AnimeId" asp-items="ViewBag.AnimeList">
                    <option value="">Select anime adaptation</option>
                </select>
                <span asp-validation-for="AnimeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorId" class="form-label mt-4">Select author</label>
                <select class="form-select" asp-for="AuthorId" asp-items="ViewBag.AuthorList">
                    <option value="">Select author</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Create</button>
        <a asp-controller="Manga" asp-action="Index" class="btn btn-primary mt-4"> Back</a>
    </fieldset>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

