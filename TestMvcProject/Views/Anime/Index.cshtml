@model IEnumerable<Anime>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-4">
    <div class="col-6">
        <h1>Anime</h1>
    </div>
    <div class="col-6 text-end mt-3">
        <a asp-controller="Anime" asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i>&nbsp Create anime</a>
    </div>
</div>
<hr />

@if (TempData["success"] != null)
{
    <div class="alert alert-dismissible alert-success mt-4">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["success"]</strong>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-dismissible alert-danger mt-4">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["error"]</strong>
    </div>
}

<div class="row justify-content-md-center">
    @if (Model.Count() == 0)
    {
        <div class="mt-4">No animies</div>
    }
    @foreach (var anime in Model)
    {
        <div class="card  col-3 p-0 m-4">
            <a class="text-decoration-none text-white" asp-controller="Anime" asp-action="Details" asp-route-id="@anime.Id">

                <h3 class="card-header">@anime.Tittle</h3>
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <h6 class="card-subtitle text-muted">Support card subtitle</h6>
                </div>
                <div class="card-body">
                    @if (anime.Images == null || anime.Images.Count == 0)
                    {
                        <img src="~/404.png" class="img-thumbnail card-img" asp-append-version="true" />
                    }
                    else
                    {
                        <img src="data:image/png;base64,@(Convert.ToBase64String(anime.Images.Last().Data))" class="img-thumbnail card-img mb-3" asp-append-version="true" />
                    }
                </div>
                <div class="card-body">
                    @if (anime.Description != null)
                    {
                        <p class="card-text">Anime discription: @anime.Description</p>
                    }
                    else
                    {
                        <p class="card-text">Anime discription: no discription.</p>
                    }
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Series count: @anime.SeriesCount</li>
                    <li class="list-group-item">Series realised: @anime.SeriesRealesed</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                <div class="card-body">
                    <a asp-controller="Anime" asp-action="Edit" asp-route-id="@anime.Id" class="btn btn-secondary "><i class="bi bi-pencil-square"></i> &nbsp Edit</a>
                    <a asp-controller="Anime" asp-action="Delete" asp-route-id="@anime.Id" class="btn btn-secondary "><i class="bi bi-trash"></i> &nbsp Delete</a>
                </div>
                <div class="card-footer text-muted">
                    @*Added: @(DateTime.Now.Subtract(author.ItemCreation))*@
                    Added: @((anime.ItemCreation.ToString("dd.MM.yy")))
                </div>
            </a>
        </div>
    }
</div>